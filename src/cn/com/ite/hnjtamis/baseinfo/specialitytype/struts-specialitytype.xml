<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <package name="specialitytype" extends="eap-default" namespace="/baseinfo/specialitytype">
       <action name="*For*Action" class="{2}Action" method="{1}">
            <result type="json" name="list">
                <param name="includeProperties">subSpecialitytypes.*</param>
                <param name="excludeNullProperties">true</param>
                <param name="ignoreHierarchy">false</param> 
            </result>
            <result type="json" name="delete">
                <param name="includeProperties">msg,success</param>
                <param name="excludeNullProperties">true</param>
                <param name="ignoreHierarchy">false</param> 
            </result>
            <result type="json" name="find">
                <param name="includeProperties">form\.[A-Za-z0-9_]+,form.parentspeciltype.bstid,form.parentspeciltype.typename</param>
                <param name="excludeProperties"></param>
                <param name="excludeNullProperties">true</param>
                <param name="ignoreHierarchy">false</param> 
            </result>
            <result type="json" name="save">
                <param name="contentType">text/html</param>
                <param name="includeProperties">msg,success</param>
                <param name="excludeNullProperties">true</param>
                <param name="ignoreHierarchy">false</param> 
            </result>
            <result type="json" name="specialtree">
                <param name="root">children</param>
                <param name="excludeNullProperties">true</param>
                <param name="ignoreHierarchy">false</param> 
            </result>
       </action>
    </package>
</struts>